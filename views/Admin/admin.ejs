  <div class="container-fluid">
    <div class="row">
      <%- include('../Utils/sidebar.ejs') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <h2>Track Lead</h2>
          <hr />
          <div class="table-responsive small">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th scope="col">Lead Id</th>
                  <th scope="col">Customer Name</th>
                  <th scope="col">Date</th>
                  <th scope="col">Lead Status</th>
                  <th scope="col">Mobile</th>
                  <th scope="col">Remark</th>
                  <th scope="col">Service</th>
                  <th scope="col">Banker</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% if(leads.length <=0){ %>
                    <h3 style="color: red">No Leads To Show</h3>
                    <p style="color: red">
                      Please <a href="/banker/createLead">create Lead</a> to display
                      them
                    </p>
                    <% } else { %>
                      <% leads.slice().reverse().forEach(function (lead) { %>
                        <% if (lead) { %>
                          <% lead.services.slice().reverse().forEach(function (service) { %>
                            <% if(service.isActive){ %>
                <tr>
                  <td>
                    <%= lead.leadId %>
                  </td>

                  <% const name=lead.firstName + " " + lead.lastName %>
                    <td><span class="cell-label"></span>
                      <%= name %>
                    </td>

                    <% const date=new Date(lead.generationDate); %>
                      <% const day=date.getDate().toString().padStart(2, '0' ); %>
                        <% const month=(date.getMonth() + 1).toString().padStart(2, '0' ); %>
                          <% const year=date.getFullYear().toString().substr(-2); %>
                            <td>
                              <%= `${day}/${month}/${year}` %>
                            </td>

                            <td>
                              <span class="cell-label"></span>
                              <% const status=service.status %>
                                <span
                                  class="status <%= status.toLowerCase() === 'completed' ? 'status-paid' : 'status-due' %>">
                                  <%= status.toUpperCase() %>
                                </span>
                            </td>
                            <td><span class="cell-label"></span>
                              <%= lead.phone %>
                            </td>
                            <td>
                              <span class="cell-label"></span>
                              <%= service.remark %>
                            </td>
                            <td>
                              <span class="cell-label"></span>
                              <%= service.serviceName %>
                            </td>
                            <td>
                              <span class="cell-label"></span>
                              <% if (lead.banker) { %>
                                <%= lead.banker.firstName %> <%= lead.banker.lastName %>
                              <% } else { %>
                                <p>No Leads if you think its present contact developer to fix this issue</p>
                              <% } %>
                            </td>

                </tr>
                <% } %>
                  <% }); %>
                    <% } %>
                      <% }); %>
                        <% } %>
                          </tr>
              </tbody>
            </table>
          </div>
        </main>
    </div>
