    <div class="input-group">
      <div class="form-outline">
        <input id="searchbar" onkeyup="search_lead()" type="text" name="search" placeholder="Search Leads..">
      </div>
    </div>

    <div class="input-group-append">
      <label for="filterDropdown" class="visually-hidden">Filter by Status:</label>
      <select id="filterDropdown" class="form-select" onchange="filterLeads(this.value)">
        <option value="All">All</option>
