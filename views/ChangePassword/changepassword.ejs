<!DOCTYPE html>
<html>
<head>
  <title>Change Password</title>
  <link rel="stylesheet" href="/AdminChangePassword/changepassword.css">
  <link rel="stylesheet" href="/adminMain.css">
</head>
<body>
    <div class="wrapper">
        <!-- Include the sidebar -->
      <%- include('../Utils/sidebar.ejs') %>
        <div id="change-password-container">
            <h1>Change Password</h1>
            <form id="change-password-form" action="/admin/changePassword" method="post">

                <label for="old">New Password</label><br>
                <input type="text" id="old" name="newPassword" required><br>

                <label for="new">Confirm Password</label><br>
                <input type="password" id="new" name="confirmPassword" required><br>

                <button type="submit" id="change-button">Change</button>
            </form>
        </div>
    </div>     
    <script src="/AdminChangePassword/changepassword.js"></script>
</body>
</html>
