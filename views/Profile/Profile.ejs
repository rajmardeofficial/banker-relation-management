<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Banker Profile</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <style>
      .profile-container {
        max-width: 600px;
        margin: auto;
        margin-top: 50px;
      }

      .form-container {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container profile-container">
      <h2 class="text-center mb-4">Banker Profile</h2>

      <!-- Personal Information -->
      <div class="card">
        <div class="card-header">Personal Information</div>
        <div class="card-body">
          <% const name = banker.firstName + " " + banker.lastName %>
          <p><strong>Name: </strong><%= name %></p>
          <p><strong>PAN Number:</strong> <%= banker.pan %></p>
          <% const rmName = rm.firstName + " " + rm.lastName %>
          <p><strong>Relationship Manager:</strong> <%= rmName %></p>
        </div>
      </div>

      <!-- Bank Details -->
      <div class="card mt-4">
        <div class="card-header">Bank Details</div>
        <div class="card-body">
          <p>
            <strong>Account Number:</strong> <%=
            banker.bankDetails.accountNumber %>
          </p>
          <p><strong>IFSC:</strong> <%= banker.bankDetails.ifsc %></p>
          <p><strong>UPI ID:</strong> <%= banker.bankDetails.upi %></p>
        </div>
      </div>

      <!-- Change Password Form -->
      <div class="card form-container mt-4">
        <div class="card-header">Change Password</div>
        <div class="card-body">
          <form method="post" action="/banker/changePassword">
            <div class="mb-3">
              <label for="newPassword" class="form-label">New Password</label>
              <input
                type="password"
                class="form-control"
                id="newPassword"
                name="newPassword"
                required
              />
            </div>
            <div class="mb-3">
              <label for="confirmNewPassword" class="form-label"
                >Confirm New Password</label
              >
              <input
                type="password"
                class="form-control"
                id="confirmNewPassword"
                name="confirmPassword"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">
              Change Password
            </button>
          </form>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
