<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Track Lead</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/TrackEarning/trackearning.css" />
  </head>
  <body>
    <div class="app-container">
      <div class="app-content">
        <div class="app-content-header">
          <h1 class="app-content-headerText">Track Lead</h1>
          <div class="button-container">
            <div class="dropdown">
              <button class="dropbtn">Filter</button>
              <div class="dropdown-content">
                <a href="#" data-value="all">All</a>
                <a href="#" data-value="completed">Completed</a>
                <a href="#" data-value="cancel">Cancel</a>
                <a href="#" data-value="pending">Pending</a>
              </div>
            </div>
            <a
              style="
                text-decoration: none;
                color: white;
                background-color: red;
                padding: 10px;
                border-radius: 10px;
              "
              href="/banker/logout"
              >Logout</a
            >
          </div>
        </div>
        <div class="search-bar-container">
          <input
            type="text"
            class="search-bar"
            placeholder="Search..."
            id="searchInput"
          />
        </div>

        <div class="app-content-actions"></div>
        <div class="action-btns" style="display: inline">
          <button class="btn btn-primary" style="">
            <a
              style="color: white; text-decoration: none"
              href="/banker/createLead"
              >Create Lead</a
            >
          </button>
          <button class="btn btn-success" style="">
            <a
              style="color: white; text-decoration: none"
              href="/banker/trackEarning"
              >Track Earnings</a
            >
          </button>
          <button class="btn btn-info" style="">
            <a
              style="color: white; text-decoration: none"
              href="/banker/profile"
              >View Profile</a
            >
          </button>
        </div>

        <!-- Table starts here -->
        <table class="tableView">
          <thead>
            <tr>
              <th>Lead ID</th>
              <th>Lead Generation Date</th>
              <th>Progress Status</th>
              <th>Mobile</th>
              <th>Service</th>
              <th>Remarks</th>
              <th>Customer Name</th>
              <th>Options</th>
            </tr>
          </thead>
          <tbody>
            <% if(leads.length <= 0){ %>
            <h3 style="color: red">No Leads To Show</h3>
            <p style="color: red">
              Please <a href="/banker/createLead">create Lead</a> to display
              them
            </p>
            <% } else { %> <% leads.forEach(function (lead) { %> <% if (lead) {
            %> <% lead.services.forEach(function (service) { %> <%
            if(service.isActive){ %>
            <tr>
              <td><%= lead.leadId %></td>
              <% const date = new Date(lead.generationDate); %> <% const
              formattedDate = date.toDateString(); %>
              <td><%= formattedDate %></td>
              <td>
                <span class="cell-label">Status:</span>
                <% const status = service.status %>
                <span
                  class="status <%= status.toLowerCase() === 'completed' ? 'status-paid' : 'status-due' %>"
                >
                  <%= status.toUpperCase() %>
                </span>
              </td>
              <td><span class="cell-label">Amount:</span><%= lead.phone %></td>
              <td>
                <span class="cell-label">Service:</span><%= service.serviceName
                %>
              </td>
              <td>
                <span class="cell-label">Remarks:</span><%= service.remark %>
              </td>
              <% const name = lead.firstName + " " + lead.lastName %>
              <td><span class="cell-label">Name:</span><%= name %></td>
              <td>
                <span class="cell-label">Bonus Amount:</span>
                <a href="/banker/editLead/<%=lead._id %>/<%= service._id %>"
                  >View/Edit</a
                >
              </td>
            </tr>
            <% } %> <% }); %> <% } %> <% }); %> <% } %>
          </tbody>
        </table>
        <!-- Table ends here -->
      </div>
    </div>
    <script src="/TrackEarning/trackearning.js"></script>
  </body>
</html>
